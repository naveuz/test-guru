<h2><%= @question.body %></h2>
<h4>Список ответов:</h4>
<%= link_to 'Добавить ответ', new_question_answer_path(@question) %>
<ol>
  <%= render @question.answers %>
</ol>
<%= link_to 'Назад', test_path(@question.test) %> |
<%= link_to 'Изменить', edit_question_path(@question) %> |
<%= link_to 'Удалить', question_path(@question),
             method: :delete,
             data: { confirm: 'Вы уверены?' } %>
