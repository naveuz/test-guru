<div class="row justify-content-center mt-5">
  <div class="col col-md-4">
    <h1 class="text-center"><%= t('.header') %></h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <p>
          <%= f.label :first_name, class: "col-form-label" %>
          <%= f.text_field :first_name, class: "form-control", autofocus: true,
              autocomplete: "first_name" %>
        </p>
        <p>
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: "form-control", autofocus: true, autocomplete: "last_name" %>
        </p>
        <p>
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
        </p>
        <p class="pwd">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= octicon "alert", class: 'text-danger hide' %>
          <%= octicon "check", class: 'text-success hide' %>
          <%= f.password_field :password, class: "password form-control", autocomplete: "off" %>
        </p>
        <p class="confirm">
          <%= f.label :password_confirmation %><br>
          <%= octicon "alert", class: 'text-danger hide' %>
          <%= octicon "check", class: 'text-success hide' %>
          <%= f.password_field :password_confirmation, class: "password-confirm form-control",autocomplete: "off" %>
        </p>

        <%= f.submit t('.signup'), class: "btn btn-primary btn-block mt-3" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
