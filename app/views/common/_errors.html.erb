<% if resource&.errors.present? %>
  <%= content_tag :div,
                  class: 'resource-errors alert alert-danger',
                  data: { resource_id: resource.id } do %>
    <b><%= t('.header', count: resource.errors.count) %></b>
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <%= content_tag :li, message %>
        <% end %>
      </ul>
  <% end %>
<% end %>
